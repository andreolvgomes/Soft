<Window x:Class="Soft.Wpf.Views.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow" Height="450" Width="600" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Cadatros">
                <MenuItem Header="Produtos" Click="CadProdutos_Click"/>
                <MenuItem Header="Categorias" Click="CadCategorias_Click"/>
                <MenuItem Header="SubCategorias" Click="CadSubCategorias_Click"/>
                <MenuItem Header="Família" Click="CadFamilia_Click"/>
                <MenuItem Header="Vendedores" Click="CadVendedores_Click"/>
            </MenuItem>
        </Menu>
    </StackPanel>
</Window>
